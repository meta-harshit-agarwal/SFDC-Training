<apex:page controller="BillToContactController" docType="html-5.0">
    <script>
    	function saveJS(){
        	var listSize = {!size};
            var selectedId;
            for( i=0; i < listSize; i++){
                if(document.getElementsByName("selectedRadio")[i].checked)
                    selectedId=document.getElementsByName("selectedRadio")[i].value;
                }
           document.getElementById("{!$Component.form.hiddenInput12}").value= selectedId;
           assignToController(selectedId);
        }
    </script>
    <apex:form id="form" >
        <apex:inputHidden value="{!contactId}" id="hiddenInput12"/>
    	<apex:pageBlock >
    		<apex:pageBlockTable value="{!contactList}" var="contact">
        		<apex:column value="{!contact.Name}" />
            	<apex:column >
                	<input type="radio" value="{!contact.Id}" name="selectedRadio" />
            	</apex:column>
        	</apex:pageBlockTable>
        	<apex:pageBlockButtons >
        		<apex:commandButton value="save" onclick="saveJS();return false;" />
            	<apex:commandButton value="clear" action="{!Clear}" />
            	<apex:commandButton value="cancel" action="{!Cancel}" />
        	</apex:pageBlockButtons>
    	</apex:pageBlock>
        <apex:actionFunction action="{!Save}" name="assignToController" >
        	<apex:param value="" assignTo="{!contactId}" name="contactID"   />
        </apex:actionFunction>
    </apex:form>
</apex:page>